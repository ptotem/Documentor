<script type="text/javascript">
    var cntr = 0;
    //var cx0=$('subslide_678').offset().left;
    //var cy0=$('.animate').offset().top;
    $(function () {
        $('.psection_block1').hide();
        $('#psection_sub_key_0').show();
    });

    function load() {
        //alert(cntr);
        cntr++;

        if (cntr <= 9) {

            if (cntr == 1) {
                var key_for_this = "psection_sub_key_" + cntr;
                var this_obj = "#" + key_for_this;
                $('.psection_block1:not(#psection_sub_key_0)').hide();
                $(this_obj).show();
                $(this_obj).next().show();
                $(this_obj).next().next().show();
                var cx = $(this_obj).next().offset().left;
                var cy = $(this_obj).next().offset().top - 100;
                $('.animate').animate({
                    marginTop:"-=" + cy + "px"
                    //marginLeft:"-="+cx+"px"
                }, 1000, function () {
                });
                cntr = cntr + 2;
            }

            if (cntr == 4) {
                var key_for_this = "psection_sub_key_" + cntr;
                var this_obj = "#" + key_for_this;
                $('.psection_block1:not(#psection_sub_key_0)').hide();
                $(this_obj).show();
                $(this_obj).next().show();
                var cx = $(this_obj).offset().left - 494.5;
                var cy = $(this_obj).offset().top - 140;
                $('.animate').animate({
                    marginTop:"-=" + cy + "px",
                    marginLeft:"-=" + cx + "px"
                }, 1000, function () {
                });
                cntr++;
            }

            if (cntr == 6) {
                var key_for_this = "psection_sub_key_" + cntr;
                var this_obj = "#" + key_for_this;
                $('.psection_block1:not(#psection_sub_key_0)').hide();
