                }, 1000, function () {
                });
                cntr++;
            }

 	if (cntr == 8) {
	        var key_for_this = "psection_sub_key_" + cntr;
                var this_obj = "#" + key_for_this;
                $('.psection_block1:not(#psection_sub_key_0)').hide();
                $(this_obj).show();
                $(this_obj).next().show();
